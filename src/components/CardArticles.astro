---
const { title, description, author, slug } = Astro.props;
---

<article
  class="rounded-lg col-span-6 border-[1px] border-gray-600 bg-card text-card-foreground shadow-sm w-full overflow-hidden"
  data-aos="fade-up"
  data-v0-t="card"
  transition:name={`article-${title}`}>
  <main
    class="flex justify-between p-5 items-start space-y-0 h-auto flex-col md:flex-row">
    <div class="space-y-1">
      <a href={`blog/${slug}`}>
        <h3
          class="text-2xl font-semibold whitespace-nowrap leading-none tracking-tight dark:text-white dark:hover:text-[#FADB6F] text-[#333333] hover:text-[#083EB6] text-wrap">
          {title}
        </h3>
      </a>

      <p
        class="text-sm text-muted-foreground text-balance font-medium text-gray-500 dark:text-gray-400">
        {description}
      </p>
    </div>
  </main>

  <footer class="py-1 px-6 md:p-6">
    <div class="flex space-x-4 text-sm text-gray-500 dark:text-gray-400">
      {author}
    </div>
  </footer>
</article>
