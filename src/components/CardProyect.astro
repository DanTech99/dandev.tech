---
import AboutHeader from "./AboutHeader.astro";
import BtnMoreProyects from "./BtnMoreProyects.astro";

// objetos para el componente 

const proyects = [
    {
        img_link: "imagen del proyecto",
        title: "titulo del proyecto",
        description: "descripcion del proyecto",
        type: ["empresa", "personal"],
        tech: [
            {
            tec: "bx bxl-html5",
            },
            {
            tec: "bx bxl-javascript",
            },
            {
            tec: "bx bxl-tailwind-css",
            }
        ],
        link_repo: "",
        link_deploy: ""

    },
    {
        img_link: "imagen del proyecto",
        title: "titulo del proyecto",
        description: "descripcion del proyecto",
        type: ["empresa", "personal"],
        tech: [
            {
            tec: "bx bxl-html5",
            },
            {
            tec: "bx bxl-javascript",
            },
            {
            tec: "bx bxl-tailwind-css",
            }
        ],
        link_repo: "",
        link_deploy: ""

    },
    {
        img_link: "imagen del proyecto",
        title: "titulo del proyecto",
        description: "descripcion del proyecto",
        type: ["empresa", "personal"],
        tech: [
            {
            tec: "bx bxl-html5",
            },
            {
            tec: "bx bxl-javascript",
            },
            {
            tec: "bx bxl-tailwind-css",
            }
        ],
        link_repo: "",
        link_deploy: ""

    }
]
---

<!-- html  -->

<!-- tarjeta de proyecto -->
<div class="container w-full px-4">
    <AboutHeader title="Proyects"></AboutHeader>
    <!-- componente btn more  -->
    <BtnMoreProyects></BtnMoreProyects>
    <!-- contenedor grid  -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 md:grid-cols-3">
       {proyects.map((items) => (
        <>
        <article class="container bg-primary rounded-sm overflow-hidden shadow-[0px_0px_3px_0px_#1707f3] hover:shadow-[2px_0px_5px_0px_#1707f3] h-auto w-auto">
            <div class="w-full max-h-80 overflow-hidden">
                <img src="../../public/img/pc.jpg" alt="" class="overflow-hidden opacity-[1] transition-all delay-75 hover:-translate-y-1 hover:scale-110 duration-300 hover:filter hover:brightness-50">
            </div>
            <div class="text-white p-6 h-[17rem] overflow-hidden ">
                <h2 class="text-white text-xl md:text-2xl mb-3 font-bold">{items.title} <span class="text-[10px] p-1 rounded-[10%] border border-[#666565] mr-10 text-[#bdb7b7] bottom-1 relative cursor-pointer"> {items.type[1]}</span></h2>
                <p class="font-normal text-lg">{items.description}</p>
            </div>
            <div class="flex justify-between p-3 md:p-5 content-center">
                <div class="flex tec">
                    {items.tech.map((icon) => (
                    <span class="text-white text-3xl flex p-1 rounded-[100%] bg-red-700 ml-1 hover:bg-[#0E0C4E]" ><i class={icon.tec}></i></span>
                ))}
                </div>
                <div class="flex">
                    <a href={items.link_deploy} class="text-white text-3xl ml-[2px]"><i class='bx bx-link-external'></i></a>
                    <a href={items.link_repo} class="text-white text-3xl ml-[2px]"><i class='bx bxl-github' ></i></a>
                </div>
            </div>
        </article>
        </>
        ))}
    </div>

</div>
 <style>
    .bg-primary{
        background: linear-gradient(63deg, #0f172a 46%, #0e0a55 100%);
    }

    .tec span:not(:first-child){
        margin-left: -.5rem;
    }
 </style>
