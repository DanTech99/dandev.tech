---
import ButtonChangeTheme from './ButtonChangeTheme.astro';
import ProjectNav from '@/icons/ProjectNav.astro';
import SkillsNav from '@/icons/SkillsNav.astro';
import AboutNav from '@/icons/AboutNav.astro';
import Home from '@/icons/Home.astro';
import BlogIcon from '@/icons/BlogIcon.astro';

interface Items {
  name: string;
  link: string;
  label: string;
  icon: any;
}

const items: Items[] = [
  {
    name: 'Proyectos',
    link: '/projects',
    label: 'proyectos',
    icon: ProjectNav,
  },
  {
    name: 'Sobre mi',
    link: '/aboutme',
    label: 'sobre-mi',
    icon: AboutNav,
  },
  {
    name: 'Blog',
    link: '/',
    label: 'blog',
    icon: BlogIcon,
  },
];
---

<!-- navigate desktop  --><!-- <nav role="navigation" class="dark:text-white text-[#333333] hidden md:block">
  <ul
    role="list"
    class="flex flex-row gap-4 justify-center items-center border-[1px] md:border-none md:p-2 ">
    {
      items.map(({ name, link, label}) => (
        <li>
          <a
            href={link}
            class="md:text-base text-xl  dark:hover:text-yellow-200 hover:text-blue-600  font-medium"
            role="link"
            aria-label={label}>
            {name}
          </a>
        </li>
      ))
    }
    <li>
      <ButtonChangeTheme />
    </li>
  </ul>
</nav> --><!-- navbar mobil -->
<div
  class="fixed bottom-0 left-0 right-0 flex justify-center items-center z-40 md:hidden w-full">
  <nav
    class="dark:bg-[#0B1528] bg-white flex justify-center items-center w-full border border-gray-600">
    <ul
      role="list"
      class="flex flex-row md:gap-7 gap-5 justify-center items-center p-3">
      <li
        class="dark:bg-[#1E2637] bg-white border border-gray-700 p-2 rounded-full scale-100 hover:scale-150 transition-transform duration-300 ease-in-out"
        data-microtip-position="top"
        role="tooltip"
        aria-label="Home">
        <a
          href="/"
          class="md:text-base text-sm dark:hover:text-yellow-200 hover:text-blue-600 font-medium">
          <Home class=" size-6 stroke-gray-700 dark:stroke-neutral-400" />
        </a>
      </li>
      {
        items.map(({ name, link, label, icon: Icon }) => (
          <li
            class="dark:bg-[#1E2637] bg-white border border-gray-700 p-2 rounded-full scale-100 hover:scale-150 transition-transform duration-300 ease-in-out"
            data-microtip-position="top"
            role="tooltip"
            aria-label={label}>
            <a
              href={link}
              class="md:text-base text-sm  dark:hover:text-yellow-200 hover:text-blue-600  font-medium "
              role="link">
              <Icon title={name} class="md:size-7 size-6 stroke-gray-700 dark:stroke-neutral-400 " />
            </a>
          </li>
        ))
      }
      <li class="bg-[#1E2637] border border-gray-700 rounded-full">
        <ButtonChangeTheme />
      </li>
    </ul>
  </nav>
</div>

<!-- desktop  -->
<div
  class="fixed bottom-5 left-0 right-0 md:flex justify-center items-center z-40 hidden ">
  <nav
    class="dark:bg-[#0B1528]  bg-white flex justify-center items-center rounded-full border border-gray-600">
    <ul role="list" class="flex flex-row gap-7 justify-center items-center p-3">
      <li
        class="dark:bg-[#1E2637] bg-gray-200 border border-gray-700 p-2 rounded-full scale-100 hover:scale-150 transition-transform duration-300 ease-in-out"
        data-microtip-position="top"
        role="tooltip"
        aria-label="Home">
        <a
          href="/"
          class="md:text-base text-sm dark:hover:text-yellow-200 hover:text-blue-600 font-medium">
          <Home class=" size-6 stroke-gray-700 dark:stroke-neutral-400" />
        </a>
      </li>
      {
        items.map(({ name, link, label, icon: Icon }) => (
          <li
            class="dark:bg-[#1E2637] bg-gray-200 border border-gray-700 p-2 rounded-full scale-100 hover:scale-150 transition-transform duration-300 ease-in-out"
            data-microtip-position="top"
            role="tooltip"
            aria-label={label}>
            <a
              href={link}
              class="md:text-base text-sm  dark:hover:text-yellow-200 hover:text-blue-600  font-medium "
              role="link">
              <Icon title={name} class="size-6 stroke-gray-700 dark:stroke-neutral-400  " />
            </a>
          </li>
        ))
      }
      <li
        class="bg-[#1E2637] border border-gray-700 p-2 rounded-full scale-100 hover:scale-150 transition-transform duration-300 ease-in-out"
        data-microtip-position="top"
        role="tooltip"
        aria-label="Tema">
        <ButtonChangeTheme />
      </li>
    </ul>
  </nav>
</div>
