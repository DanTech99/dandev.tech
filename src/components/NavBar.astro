---
import ButtonChangeTheme from './ButtonChangeTheme.astro';
import WorkNav from '@/icons/WorkNav.astro';
import ProjectNav from '@/icons/ProjectNav.astro';
import SkillsNav from '@/icons/SkillsNav.astro';
import AboutNav from '@/icons/AboutNav.astro';

interface Items {
  name: string;
  link: string;
  label: string;
  icon: any;
}

const THEMES = ['Light', 'Dark', 'System'];

const items: Items[] = [
  {
    name: 'Proyectos',
    link: '/#proyectos',
    label: 'proyectos',
    icon: ProjectNav,
  },
  {
    name: 'Habilidades',
    link: '/#habilidades',
    label: 'habilidades',
    icon: SkillsNav,
  },
  {
    name: 'Sobre mi',
    link: '/aboutme',
    label: 'sobre-mi',
    icon: AboutNav,
  },
  {
    name: 'Blog',
    link: '/blog',
    label: 'blog',
    icon: AboutNav,
  },
];
