---
// import removeTrailingSlash from '@/utils/removeTrailingSlash';
import Sun from '@/icons/Sun.astro';
import Moon from '@/icons/Moon.astro';

interface Items {
  name: string;
  link: string;
  label: string;
}

const items: Items[] = [
  {
    name: 'Experiencia',
    link: '/#experiencia',
    label: 'experiencia',
  },
  {
    name: 'Proyectos',
    link: '/#proyectos',
    label: 'proyectos',
  },
  {
    name: 'Habilidades',
    link: '/#habilidades',
    label: 'habilidades',
  },
  {
    name: 'Sobre mi',
    link: '/#sobre-mi',
    label: 'sobre-mi',
  },
];
---

<nav role="navigation" class="dark:text-white text-[#333333]">
  <ul
    role="list"
    class="flex flex-row gap-4 justify-center items-center border-2 md:border-none p-2 rounded-3xl">
    {
      items.map(({ name, link, label }) => (
        <li>
          <a
            href={link}
            class="text-base  hover:text-yellow-200 font-medium"
            role="link"
            aria-label={label}>
            {name}
          </a>
        </li>
      ))
    }
    <li>
      <button
        role="button"
        aria-label="button para cambiar de tema"
        id="button">
        <Sun id="sun" />
      </button>
    </li>
  </ul>
</nav>

<script>
  const btn = document.querySelector('button');

  function toggleDarkMode() {
    document.documentElement.classList.toggle('dark');

    console.log('cambiando a modo claro');
  }

  btn?.addEventListener('click', toggleDarkMode);
</script>
