---
import GitHub from '@/icons/GitHub.astro';
import LinkedIn from '@/icons/LinkedIn.astro';
import ButtonStatus from '@/components/ButtonStatus.astro';
import BlogIcon from '@/icons/BlogIcon.astro';
import Mail from '@/icons/Mail.astro';

interface IntroBasic {
  image: string;
  label: string;
  name: string;
  url: string;
  description: string;
}

const Info: IntroBasic[] = [
  {
    label: 'Hola/Hi âœ‹',
    name: 'Soy Danilo Macea',
    image: '/img/logo-dantech.webp',
    url: 'url de la pagina',
    description:
      'Desarrollador web frontend, amante de la web y autodidacta, me gusta enfocar mis proyectos en la experiencia de usuario y me encanta trabajar con gente apasionada como yo.',
  },
];

const { label, name, image, url, description } = Info[0];
---

<section
  class="flex md:flex-row flex-col gap-8 md:justify-end justify-between items-center md:gap-12">
  <main class="flex flex-col gap-3">
    <!-- section movil  -->
    <div class="md:hidden flex flex-row items-center gap-6 mb-2">
      <div class="w-20 bg-white h-20 rounded-full">
        <img
          src={image}
          alt="imagen personal para el portafolio"
          class="w-full"
          loading="lazy"
        />
      </div>
      <div class="md:hidden">
        <h1
          class="text-4xl font-semibold dark:text-white text-[#083EB6] flex justify-start items-center gap-5">
          <ButtonStatus />
        </h1>
      </div>
    </div>

    <div>
      <span class="text-xl dark:text-white text-[#333333]">
        {label}
      </span>
      <h1
        class="text-4xl font-semibold dark:text-white text-[#083EB6] md:flex justify-start items-center gap-5">
        {name}
        <span class="hidden md:inline-flex">
          <ButtonStatus />
        </span>
      </h1>
      <p
        class="w-auto max-w-[60ch] text-xl dark:text-white text-[#333333] md:text-balance text-pretty">
        <span class="dark:text-[#FADB6F] text-[#083EB6]">
          Desarrollador web,</span
        >
        amante de la web y autodidacta, me gusta enfocar mis proyectos en la experiencia
        de usuario y me encanta trabajar con gente apasionada como yo.
        <p class="text-xl dark:text-[#FADB6F] text-[#083EB6]">
          Conecta conmigo ðŸ‘‡ðŸ‘‡
        </p>
      </p>
    </div>

    <div class="flex justify-start items-center pt-2">
      <a
        href="https://github.com/dantech99"
        class="px-2 py-1 flex flex-row justify-between items-center"
        role="link"
        target="_blank">
        <GitHub
          class="size-8 fill-white stroke-gray-700 dark:stroke-gray-400 dark:fill-none"
        />
      </a>

      <a
        href="https://www.linkedin.com/in/dantechdev/"
        class="px-2 py-1 text-[#333333] hover:shadow-lg ml-2 flex flex-row justify-between items-center"
        role="link"
        target="_blank">
        <LinkedIn
          class="size-8 fill-white stroke-gray-700 dark:stroke-gray-400 dark:fill-none"
        />
      </a>

      <a
        href="/blog"
        class="px-2 py-1 text-[#333333] hover:shadow-lg ml-2 flex flex-row justify-between items-center"
        role="link"
        <BlogIcon
          class="size-8 fill-white stroke-gray-700 dark:stroke-gray-400 dark:fill-none"
        />
      </a>

      <a
        href="mailto:dandevtech99@gmail.com"
        class="px-2 py-1 text-[#333333] hover:shadow-lg ml-2 flex flex-row justify-between items-center"
        role="link"
        <Mail
          class="size-8 fill-white stroke-gray-700 dark:stroke-gray-400 dark:fill-none"
        />
      </a>
    </div>
  </main>

  <div class="md:flex hidden flex-col justify-center items-center">
    <div class="w-52 bg-white h-52 rounded-full">
      <img
        src={image}
        alt="imagen personal para el portafolio"
        class="w-full"
        loading="lazy"
      />
    </div>
  </div>
</section>
